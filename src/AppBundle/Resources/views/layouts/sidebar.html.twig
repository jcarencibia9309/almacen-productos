<aside id="left-panel" class="left-panel">
    <nav class="navbar navbar-expand-sm navbar-default">

        <div id="main-menu" class="main-menu collapse navbar-collapse">
            <ul class="nav navbar-nav">
                {% for navItem in appConfig.getSideNav() %}
                    {% if navItem.section is defined %}
                        <li class="menu-title">{{ navItem.section }}</li>
                    {% elseif navItem.path is defined %}
                        <li class="{{ app.request.get('_route') == navItem.path ? 'active' : '' }}">
                            <a href="{{ path(navItem.path) }}"><i class="menu-icon {{ navItem.icon }}"></i> {{ navItem.label}} </a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ navItem.url }}"><i class="menu-icon {{ navItem.icon }}"></i> {{ navItem.label}} </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </nav>
</aside>
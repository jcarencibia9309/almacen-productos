{%
    set columns = [
    {'label': 'Nombre', 'name': 'nombre'},
    {'label': 'Cantidad', 'name': 'cantidad'},
    {'label': 'Precio venta', 'name': 'precioVenta'},
    {'label': 'Importe', 'name': 'importe'}
]
%}

{%
    set actions = [
    {'label': 'Modificar', 'icon': 'fa fa-pencil', 'path': 'venta_producto_edit', pathParams: {'idVenta': venta.id} }
]
%}

{% set readOnly = readOnly is defined ? readOnly : false %}

{% if readOnly == false %}
    <div class="pb-2">
        <a href="{{ path('venta_producto_add', {'idVenta': venta.id}) }}" class="btn text-primary"><i class="fa fa-plus"></i> Adicionar</a>
    </div>
{% endif %}


{% include 'AppBundle::components/table.html.twig' with {'columns': columns, 'items': venta.productos, 'actions': actions, 'readOnly': readOnly}%}
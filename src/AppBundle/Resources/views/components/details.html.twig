{%
    set sizeClasses = {
        'col-12': 'col-12',
        'col-6': 'col-xs-12 col-sm-6',
        'col-4': 'col-xs-12 col-sm-6 col-md-4',
        'col-3': 'col-xs-12 col-sm-6 col-md-4 col-xl-3',
        'col-2': 'col-xs-12 col-sm-6 col-md-4 col-lg-3 col-xl-2'
    }
%}

{% set defaultSize = size is defined ? size : 'col-4' %}

<div class="row">
    {% for field in fields %}

        {% set size = field.size is defined ? field.size : defaultSize %}
        {% set dataType = field.type is defined ? field.type : 'string' %}

        <div class="{{ attribute(sizeClasses, size) }} mb-4">
            <b>{{ field.label }}</b>
            <br>
            {{ dataTransform.transform(attribute(data, field.name), dataType)|default('-') }}
        </div>

    {% endfor %}
</div>